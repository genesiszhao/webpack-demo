{
  "semi": false,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "trailingComma": "es5",
        "tabWidth": 2,
        "singleQuote": true
      }
    },
    {
      "files": "*.css",
      "options": {
        "tabWidth": 4,
        "singleQuote": true
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2,
        "singleQuote": true
      }
    }
  ]
}
